@using System.Web.Optimization
@using WebApplication.Models
@model List<Store>
@{
    Layout = null;
    ViewBag.Title = "List of Stores";
}

<table>
    <tr><td><p>Name of store</p></td>
        <td><p>Opening hours</p></td>
        <td><p>Address</p></td><td></td>
    </tr>
    @foreach (var b in ViewBag.Stores)
    {
        <tr>
            <td><p>@b.Name</p></td>
            <td><p>@b.Address</p></td>
            <td><p>@b.OpeningHours</p></td>
            <td><p>@Ajax.ActionLink("View Products", "ViewProducts",  new {id = b.Id}, new AjaxOptions{ UpdateTargetId= "ListProducts" })</p></td>
        </tr>
    }
</table>

<div id="ListProducts">
</div>

@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")